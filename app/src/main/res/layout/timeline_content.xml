<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/textboxes_padding"


    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_timeline"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="@dimen/login_edittext_margintop" />

            <TextView
                android:id="@+id/textview_timeline_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_timeline"
                android:background="#301934"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Name"/>

            <TextView
                android:id="@+id/textview_timeline_date"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_timeline_name"
                android:background="#301934"

                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="Date"
                android:layout_marginTop="10dp"
                />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>